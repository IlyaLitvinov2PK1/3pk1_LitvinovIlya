<Window x:Class="semga.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semga"
        mc:Ignorable="d"
        Title="ImageWindow" Height="450" Width="800" ResizeMode="NoResize">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="569*"/>
            <ColumnDefinition Width="192*"/>
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>
        <InkCanvas x:Name="IK1" Margin="5,5,5,5" Background="White" Grid.ColumnSpan="3"/>
        
        <Label x:Name="l1" Content="" HorizontalAlignment="Left" Margin="7,27,0,0" VerticalAlignment="Top" Width="464"/>
        <Button x:Name="Save_Bt" Content="Сохранить" HorizontalAlignment="Left" Margin="79,0,0,0" VerticalAlignment="Top" Width="74" Click="Save_Bt_Click"/>
        <Button x:Name="Back_Bt" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Click="Back_Bt_Click"/>
        <Button Content="Поменять режим" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="210" Margin="158,0,0,0" Click="Button_Click"/>

    </Grid>
</Window>
