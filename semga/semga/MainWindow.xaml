<Window x:Class="semga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semga"
        mc:Ignorable="d"
        Title="Заметки" Height="450" Width="300"  ResizeMode="NoResize">
    <Grid Margin="0,0,10,0">
        <Button x:Name="Add_Bt" Content="Добавить" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="61" Width="135" Click="Add_Bt_Click"/>
        <Button x:Name="AddText_Bt" Content="текст" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="61" Width="64" Visibility="Hidden" Click="AddText_Bt_Click"/>
        <Button x:Name="AddImage_Bt"  Content="рисунок" HorizontalAlignment="Left" Margin="74,10,0,0" VerticalAlignment="Top" Height="61" Width="64" Visibility="Hidden" Click="AddImage_Bt_Click"/>
        <Button x:Name="Delete_Bt"  Content="Удалить" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" Height="61" Width="137"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,76,3,10"/>

    </Grid>
</Window>
